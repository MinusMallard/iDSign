<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignerPage2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:text="Document Yet to be received"
        android:textSize="20dp"
        android:id="@+id/progressText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:text="Open Document"
        android:enabled="false"
        android:id="@+id/openDoc"
        android:paddingHorizontal="70dp"
        android:paddingVertical="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/openDoc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:text="Sign Document"
        android:textSize="20dp"
        android:enabled="false"
        android:id="@+id/signDoc"
        android:paddingHorizontal="70dp"
        android:paddingVertical="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/openDoc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:text="View Signed Doc"
        android:paddingHorizontal="70dp"
        android:paddingVertical="20dp"
        android:visibility="invisible"
        android:id="@+id/viewSignedDocSigner"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewSignedDocSigner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:text="Send Signatures"
        android:paddingHorizontal="70dp"
        android:paddingVertical="20dp"
        android:visibility="invisible"
        android:id="@+id/sendSign"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewSignedDocSigner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:text="Sign More Files"
        android:paddingHorizontal="70dp"
        android:paddingVertical="20dp"
        android:visibility="invisible"
        android:id="@+id/signMoreFiles"
        />





</androidx.constraintlayout.widget.ConstraintLayout>